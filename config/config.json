{
  "environment": {
    "spatial": {
      "size": 100.0,
      "num_sectors": 7,
      "max_episode_steps": 1000
    },
    "capacity": {
      "max_company": 1000,
      "initial_firms": 10
    },
    "actions": {
      "max_actions_per_step": 10
    },
    "company": {
      "op_cost_rate": 0.05,
      "initial_capital_min": 10000.0,
      "initial_capital_max": 100000.0,
      "investment_min": 0.0,
      "investment_max": 1000000.0,
      "new_company_capital_min": 1000.0,
      "new_company_capital_max": 1000000.0,
      "death_threshold": 0.0
    },
    "supply_chain": {
      "enable_supply_chain": true,
      "trade_volume_fraction": 0.01,
      "revenue_rate": 1.0,
      "min_distance_epsilon": 0.1
    },
    "logistics": {
      "logistic_cost_rate": 100.0,
      "disable_logistic_costs": false
    },
    "rewards": {
      "investment_multiplier": 0.01,
      "creation_reward": 50.0,
      "invalid_action_penalty": -20.0,
      "invalid_firm_penalty": -10.0,
      "profit_multiplier": 0.001
    },
    "visualization": {
      "figsize_width": 18,
      "figsize_height": 12,
      "dpi": 600,
      "show_plots": false,
      "save_plots": true,
      "plot_format": "png",
      "visualize_every_n_steps": 0,
      "visualization_dir": "visualizations"
    },
    "ablation": {
      "disable_supply_chain": false,
      "fixed_locations": false,
      "allow_negative_capital": false
    },
    "products": {
      "enable_products": true,
      "production_capacity_ratio": 0.1,
      "purchase_budget_ratio": 0.2
    }
  },
  "training": {
    "framework": "sb3",
    "algorithm": "ppo",
    "total_timesteps": 100000,
    "num_envs": 4,
    "learning_rate": 0.0003,
    "batch_size": 64,
    "gamma": 0.99,
    "gae_lambda": 0.95,
    "clip_range": 0.2,
    "ent_coef": 0.0,
    "vf_coef": 0.5,
    "max_grad_norm": 0.5,
    "n_steps": 2048,
    "n_epochs": 10,
    "seed": 42,
    "verbose": 1,
    "log_dir": "./logs",
    "checkpoint_dir": "./checkpoints",
    "save_freq": 10000,
    "eval_freq": 5000,
    "visualize_freq": 10000,
    "n_eval_episodes": 10,
    "save_best_model": true,
    "normalize_observations": false,
    "normalize_rewards": false,
    "clip_observations": 10.0,
    "clip_rewards": 10.0,
    "frame_stack": 1
  }
}
